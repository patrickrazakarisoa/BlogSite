{% extends 'base.html.twig' %}

{% block title %}Details{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center m-3 card p-3">{{ article.title }}</h1>
    <div class="img-fluid">
        <img width="100%" src="/assets/blog/images/{{ article.image }}" alt=" {{ article.title }}">
    </div>
    <div class="row">
        <p class="date">Ecrit le {{ article.createdAt  | date("m/d/Y") }} Ã  {{ article.createdAt  | date("H:i")}} par
            <span> {{ article.author}}</span> </p> <br><br>
        <h1 class="title p-1">{{ article.title }}</h1><br><br>
        <p class="content text-justify">
            {{ article.content | raw }}
        </p>
    </div>
</div>
{% endblock %}