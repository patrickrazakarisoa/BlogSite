{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center mt-2">Inscription</h1>
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.firstname, {'label': "Votre prénom: ", 'attr': { 'placeholder': "Votre prénom ..."} } ) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.lastname,  {'label': "Votre nom: ", 'attr': { 'placeholder': "Votre nom ..."} }) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{ form_row(form.email, {'label': "Votre email: ", 'attr': { 'placeholder': "Votre email..."} }) }}
        </div>
        <div class="col-12">
            {{ form_row(form.password , {'label': "Votre mot de passe : ", 'attr': { 'placeholder': "Votre mot de passe ..."} }) }}
        </div>
        <div class="col-12">
            {{ form_row(form.passwordConfirm, {'label': "Confirmer votre mot de passe: ", 'attr': { 'placeholder': "Confirmer votre mot de passe ..."} }) }}
        </div>
    </div>
    <button type="submit" class="btn btn-success mt-3" style="width: 100%;">S'inscrire</button>
    {{ form_end(form)}}
</div>

{% endblock %}