{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
<div class="row">

    <div class="col-md-8">
        <h1 class="title p-1 text-center">Blog d'actualité Jstore</h1>

        <div class="row">

            <div class="cod-md-8">

                <div class="row">

                    {% for article in articles %}

                    <div class="col-md-4 mb-3">

                        <img src="/assets/blog/images/{{ article.image }}" class="card-img-top"
                            alt="{{ article.image }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>

                            <a href=" {{ path('show', {'id':article.id}) }} " class="btn btn-primary">En savoir plus</a>
                        </div>
                        <div class="card-footer">
                            <p class="date">Ecrit le {{ article.createdAt  | date("m/d/Y") }} à
                                {{ article.createdAt  | date("H:i")}} par <span> {{ article.author}}</span> </p>
                        </div>
                    </div>
                    {% endfor %}

                </div>
            </div>


        </div>
    </div>

    <div class="col-md-4 mt-2">
        <h2 class="title p-1 text-center">Category</h2>
        <ul class="list-group">
            {% for category in categories %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a style="text-decoration: none;"
                    href="{{ path('category', {'id': category.id})}}">{{ category.title }}</a>
                <span class="badge bg-primary badge-pill">{{ category.articles | length }} article(s) </span>
            </li>
            {% endfor %}
        </ul>
    </div>

</div>
{% endblock %}