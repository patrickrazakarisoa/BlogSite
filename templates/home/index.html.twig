{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
<div class="container"> 
    <h1>Bienvenue sur la page d'acceuil</h1>
    <div class="row">
        {% for article in articles %}
            <div class="card col-md-4" style="width: 18rem;">
                <p class="date">Ecrit le {{ article.createdAt  | date("m/d/Y") }} Ã  {{ article.createdAt  | date("H:i")}} par <span> {{ article.author}}</span> </p>
                <img src="/assets/blog/images/{{ article.image }}" class="card-img-top" alt="{{ article.image }}">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <a href=" {{ path('show', {'id':article.id}) }} " class="btn btn-primary">En savoir plus</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}


